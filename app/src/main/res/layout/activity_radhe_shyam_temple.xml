<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityHistoricalRadheShyamTemple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/radhe_shyam_temple" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/call_icon_image"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:maxHeight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/phone_call" />

            <ImageView
                android:id="@+id/web_search_image"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/call_icon_image"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/browser" />

            <ImageView
                android:id="@+id/google_map_search_image"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/google_maps" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:text="Summary :-"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="@string/traces_its_history_from_1758_radha_shyam_temple_in_bishnupur_was_constructed_by_the_king_chaitanya_singha_devoted_to_lord_krishna_the_temple_is_located_near_another_historical_shrine_jorbangla_temple_radha_shyam_temple_is_dome_shaped_and_it_lies_within_an_enclosure_which_is_surrounded_by_the_boundary_wall_along_with_its_high_sacred_significance_the_temple_is_known_for_its_aesthetic_architecture_which_makes_a_popular_tourist_attraction_in_bishnupur_because_of_its_historical_significance_and_heritage_value_the_temple_is_well_preserved_by_the_archaeological_survey_of_india_asi_enshrining_the_images_of_lord_krishna_and_radha_in_the_sanctum_the_radha_shyam_temple_is_esteemed_as_the_living_shrine_in_the_region_along_with_the_radha_and_shyam_lord_krishna_the_sanctum_also_includes_the_images_of_nityananda_and_chaitanya_in_the_temple_vicinity_there_is_another_shrine_which_houses_the_idols_of_lord_jagannath_of_puri_and_also_nityananda_and_chaitanya_throughout_the_year_this_beautiful_temple_in_bishnupur_is_visited_by_numerous_visitors_some_come_to_offer_their_homage_while_others_visit_the_temple_just_to_adore_exquisite_grandeur"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>