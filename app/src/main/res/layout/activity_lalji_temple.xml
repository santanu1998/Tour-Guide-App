<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityHistoricalLaljiTemple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="305dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/lalji_temple" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/call_icon_image"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:maxHeight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/phone_call" />

            <ImageView
                android:id="@+id/web_search_image"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/call_icon_image"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/browser" />

            <ImageView
                android:id="@+id/google_map_search_image"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:paddingTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/google_maps" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:text="Summary :-"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="@string/lalji_temple_has_been_built_by_malla_king_bir_singha_with_shikhara_and_built_on_raised_platform_of_square_shape_this_temple_has_been_devoted_to_radha_krishna_and_is_similar_to_that_of_bengali_architecture_with_ornamental_stucco_decorations_in_front_of_the_temple_there_is_dancing_hall_and_there_is_tower_in_the_west_dedicated_to_raghunath_outer_yard_is_divided_from_the_inner_by_a_wall_and_contains_a_small_pancharatna_temple_of_kameswar_siva_the_temple_is_enclosed_by_wall_entirely_with_a_gateway_passage_towards_east_in_front_of_the_gateway_are_two_cars_are_there_one_for_lord_lalji_and_the_other_from_lord_raghunath_they_are_taken_out_in_procession_during_dussera_festival_there_are_inscriptions_in_bengali_at_several_places_trains_and_buses_both_can_be_taken_depending_on_the_comfort_of_person"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>